%h2 New product
-# = render 'form', product: @product

= simple_form_for [:api, @product] do |f|
  = f.input :title, label: 'Title'
  = f.input :price_type, collection: Product.price_types.map{ |k,v| [k.split('_').join(' '), k ]}
  = f.input :price_init, label: 'Price'
  = f.input :description, label: 'Description'
  = f.submit 'submit', class: 'btn btn-primary'
